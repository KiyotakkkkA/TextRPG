{
  "name": "DESC",
  "scopeName": "source.desc",
  "fileTypes": ["desc"],
  "patterns": [
    { "include": "#comment" },
    { "include": "#block-keyword" },
    { "include": "#entity-declaration" },
    { "include": "#block-content" },
    { "include": "#property" }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "name": "comment.line.number-sign.desc",
          "match": "#.*$"
        },
        {
          "name": "comment.line.double-slash.desc",
          "match": "//.*$"
        },
        {
          "name": "comment.block.desc",
          "begin": "/\\*",
          "end": "\\*/",
          "captures": {
            "0": { "name": "punctuation.definition.comment.desc" }
          }
        }
      ]
    },
    "block-keyword": {
      "match": "\\b(LOCATION|REGION|ITEM|CHARACTER|RESOURCE|CONNECTION|EFFECT|DIALOGUE|PROPERTIES|RESOURCES|CONNECTIONS|CHARACTERS|STATS|INVENTORY|EFFECTS|TOPIC)\\b(?!\\s*[a-zA-Z_][a-zA-Z0-9_]*\\s*\\{)",
      "name": "keyword.other.entity.desc"
    },
    "entity-declaration": {
      "match": "\\b(LOCATION|REGION|ITEM|CHARACTER|RESOURCE|CONNECTION|EFFECT|DIALOGUE|PROPERTIES|RESOURCES|CONNECTIONS|CHARACTERS|STATS|INVENTORY|EFFECTS|TOPIC)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\{",
      "captures": {
        "1": { "name": "keyword.other.entity.desc" },
        "2": { "name": "entity.name.class.desc" }
      }
    },
    "block-content": {
      "patterns": [
        {
          "begin": "\\{",
          "end": "\\}",
          "beginCaptures": {
            "0": { "name": "punctuation.section.block.begin.desc" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.section.block.end.desc" }
          },
          "patterns": [
            { "include": "#comment" },
            { "include": "#block-keyword" },
            { "include": "#entity-declaration" },
            { "include": "#property" },
            { "include": "#block-content" }
          ]
        }
      ]
    },
    "property": {
      "patterns": [
        {
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*:(?=\\s|$)",
          "captures": {
            "1": { "name": "support.type.property-name.desc" }
          }
        },
        {
          "name": "string.quoted.double.desc",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.desc",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.desc",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.desc",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "constant.numeric.desc",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        {
          "name": "constant.language.boolean.desc",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.desc",
          "match": "\\bnull\\b"
        },
        {
          "name": "keyword.type.desc",
          "match": "\\b(COMMON|UNCOMMON|RARE|EPIC|LEGENDARY)\\b"
        },
        {
          "begin": "\\[",
          "end": "\\]",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.array.begin.desc" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.array.end.desc" }
          },
          "patterns": [{ "include": "#property" }]
        }
      ]
    }
  }
}
